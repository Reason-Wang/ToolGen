        "stage3_max_live_parameters": 1e9,
        "stage3_max_reuse_distance": 1e9,
        "stage3_gather_16bit_weights_on_model_save": true
    },
    "checkpoint": {
        "tag_validation": "Warn",
        "load_universal": false,
        "use_node_local_storage": true,
        "parallel_write":{
            "pipeline_stage": true
        }
    },
    "bf16": {
        "enabled": "auto"
    }
